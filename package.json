{
  "main": "./dist/extension.cjs",
  "module": "index.ts",
  "dependencies": {
    "@types/vscode": "^1.86.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.27.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "echo 'Open this directory in VSCode and then run your extension with F5 or `Run and Debug > Run Extension`!'",
    "build": "bun run ./scripts/build-with-esbuild.ts",
    "watch": "bun run ./scripts/watch-with-esbuild.ts",
    "vsce-package": "bun run vsce package",
    "package": "bun run build --compile && bun run vsce-package",
    "clean": "rm -r ./dist"
  },
  "//": "START EXTENSION ATTRIBUTES",
  "name": "pg-fn-tools",
  "version": "1.0.1",
  "description": "VSCode extension to enhance PostgreSQL function/procedure handling",
  "displayName": "Postgres Function Tools",
  "license": "MIT",
  "publisher": "MaciejWojs",
  "author": {
    "name": "Maciej WÃ³js",
    "url": "https://github.com/MaciejWojs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MaciejWojs/pg-fn-tools"
  },
  "keywords": [
    "postgres",
    "postgresql",
    "plpgsql",
    "sql",
    "functions",
    "procedures",
    "pg-functions",
    "pg-procedures",
    "sql-tools",
    "code-navigation",
    "completion",
    "hover",
    "signature-help",
    "rename",
    "refactor",
    "vscode-extension",
    "vscode",
    "database",
    "developer-tools"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "contributes": {
    "languages": [],
    "commands": [
      {
        "command": "postgres.showFunctions",
        "title": "Postgres: Show functions/procedures in file"
      },
      {
        "command": "postgres.moveFunction",
        "title": "Postgres: Move function/procedure between files"
      },
      {
        "command": "postgres.generateSkeleton",
        "title": "Postgres: Generate function/procedure skeleton"
      }
    ],
    "keybindings": [
      {
        "command": "postgres.showFunctions",
        "key": "ctrl+shift+.",
        "when": "editorTextFocus && editorLangId == sql"
      }
    ]
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "activationEvents": [
    "onLanguage:sql"
  ]
}